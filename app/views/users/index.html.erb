<div>
  <%= flash[:notice] %>
</div>
<div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= render 'user', user: @user %>
      </div>
      <div class="col-lg-8 offset-md-1">
        <table class="table table-striped">
            <div class="col-lg-8 offset-md-1">
              <h2>Books</h2>
              <table class="table table-hover table-inverse">
                    <thead>
                      <tr>
                        <th></th>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                    <% @users.each do |user| %>
                    <tbody>
                      <tr>
                        <th>
                          <%= image_tag user.get_profile_image(100,100) %>
                        </th>
                        <th>
                          <%= user.name %>
                        </th>
                        <th>
                          <%= link_to "Show", user_path(user.id) %>
                        </th>
                      </tr>
                    </tbody>
                    <% end %>
              </table>
        </table>
      </div>
    </div>
  </div>