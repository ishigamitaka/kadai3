<div class="container">
  <div class="row">
    <div class="col-cm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <label>Name</label>
        <div class="form-group">
          <%= f.text_field :name %>
        </div>
        
        <label>Image</label>
        <div class="form-group">
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        
        <label>Introduction</label>
        <div class="form-group">
          <%= f.text_area :introduction %>
        </div>
        
        <div class="form-group">
          <%= f.submit 'Update User' %>
        </div>
      <% end %>
    </div>
  </div>
</div>