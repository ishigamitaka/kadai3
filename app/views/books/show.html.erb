<div>
  <%= flash[:notice] %>
</div>
  <div class="container px5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user', user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
            <div class="col-lg-8 offset-md-1">
              <h2>Book detail</h2>
              <table class="table">
                    <tbody>
                      <tr>
                        <td>
                          <% if @book.image.attached? %>
                          <%= image_tag @book.image, size: "80x80" %>
                          <% else %>
                          <%= image_tag 'no_image', size: "80x80" %>
                          <% end %>
                          <br>
                          <%= link_to user_path(@user.id) %>
                        </td>
                        <td><%= link_to @book.title %></td>
                        <td><%= @book.body %></td>
                        <td>
                          <%= link_to edit_book_path(@book.id) do %>
                            <i class="btn btn-sm btn-success">Edit</i>
                          <% end %>
                        </td>
                        <td>
                          <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                            <i class="btn btn-sm btn-danger">Destory</i>
                          <% end %>
                        </td>
                      </tr>
                    </tbody>
              </table>
            </div>
      </div>
    </div>
  </div>