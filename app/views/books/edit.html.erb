<div class="container">
  <div class="row">
    <div class="col-cm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book, method: :patch do |f| %>
      <label>Titel</label>
      <div class="form-group">
        <%= f.text_field :title%>
      </div>
      <label>Opinion</label>
      <div class="form-group">
        <%= f.text_area :body%>
      </div>
      <div class="form-group">
        <%= f.submit 'Update Book' %>
      </div>
      <% end %>
      <%= link_to user_path %>
      |
      <%= link_to books_path %>
    </div>
  </div>
</div>